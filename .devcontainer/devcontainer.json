{
  "name": "Go DevContainer with Air",
  "image": "mcr.microsoft.com/devcontainers/go",
  "onCreateCommand": {
    "air": "go install github.com/air-verse/air@latest",
    "dlv": "go install github.com/go-delve/delve/cmd/dlv@latest"
  },
  "postStartCommand": "air",
  "forwardPorts": [
    "8080:8080"
  ]
}